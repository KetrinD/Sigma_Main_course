@model Models.Models.HomeTask
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <title>@ViewData["action"]</title>
</head>

<body>
    <form asp-action=@ViewData["action"]>
        @Html.HiddenFor(p => p.Id);

        <p>Title</p>
        <input asp-for="Title" />
        <p>Description</p>
        <input asp-for="Description" />
        <p>Number</p>
        <input asp-for="Number" />
        <p>Date</p>
        <input asp-for="Date" />

        <input type="submit" value="post" />
    </form>
</body>
</html>