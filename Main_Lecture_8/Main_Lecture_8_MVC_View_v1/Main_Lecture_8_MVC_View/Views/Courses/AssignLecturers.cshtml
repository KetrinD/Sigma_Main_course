@model Main_Lecture_8_MVC_View.ViewModels.CourseLecturersAssignmentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <title> Assign Lecturers</title>
</head>

<body>
    <form asp-action="AssignLecturers">
        @Html.HiddenFor(p => p.Id)
        <p>@Model.Name</p>
        <p>@Model.StartDate</p>
        <p>@Model.EndDate</p>
        @for (var i = 0; i < Model.Lecturers.Count; i++)
        {
            @Model.Lecturers[i].LectureFullName
            @Html.CheckBoxFor(p => Model.Lecturers[i].IsAssigned)
            @Html.HiddenFor(p => Model.Lecturers[i].LectureId)
        }
        <input value="Save" type="submit" />
    </form>
</body>
</html>
