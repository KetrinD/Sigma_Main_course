@model Models.Models.Student
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <title> This is Studetns page</title>
</head>
<title>@ViewData["action"]</title>

    <body>
        <form asp-action=@ViewData["action"]>
            <input name="Name" value="@Model.Name" type="text" />
            <input name="Email" value="@Model.Email" type="text" />
            <input name="BirthDate" value="@Model.BirthDate" type="datetime" />
            <input asp-for="PhoneNumber" />
            @Html.HiddenFor(p => p.Id);
            <input type="submit" value="post" />
        </form>
    </body>
</html>
