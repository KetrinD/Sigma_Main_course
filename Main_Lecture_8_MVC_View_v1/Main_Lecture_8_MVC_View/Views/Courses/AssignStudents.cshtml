@model Main_Lecture_8_MVC_View.ViewModels.CourseStudentAssignmentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html>
<head>
    <title> Assign Students</title>
</head>

<body>
    <form asp-action="AssignStudents">
        @Html.HiddenFor(p => p.Id)
        <p>@Model.Name</p>
        <p>@Model.StartDate</p>
        <p>@Model.EndDate</p>
        @for (var i = 0; i < Model.Students.Count; i++)
        {
            @Model.Students[i].StudentFullName
            @Html.CheckBoxFor(p => Model.Students[i].IsAssigned)
            @Html.HiddenFor(p => Model.Students[i].StudentId)
        }
        <input value="Save" type="submit" />
    </form>
</body>
</html>
